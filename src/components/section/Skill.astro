---
import CardSkill from '@/CardSkill.astro'

const skills = [
  { title: 'Javascript', image: 'javascript' },
  { title: 'Vue', image: 'vue' },
  { title: 'React', image: 'react' },
  { title: 'GIT', image: 'git' },
  { title: 'Figma', image: 'figma' },
  { title: 'Laravel', image: 'laravel' },
  { title: 'Flutter', image: 'flutter' },
  { title: 'SCSS', image: 'flutter' },
  { title: 'Styled Comp.', image: 'flutter' }
]
---

<section class="py-10">
  <div class="mx-auto px-4 md:max-w-[1211px] md:px-8">
    <h2 class="!leading-140 text-3xl font-semibold tracking-tight md:font-bold 2xl:text-4xl">Skills</h2>
    <div class="mt-5 grid grid-cols-6 content-center gap-4">
      {skills.map((skill) => <CardSkill title={skill.title} image={skill.image} />)}
    </div>
  </div>
</section>
