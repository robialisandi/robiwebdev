---
type Props = {
  title?: string
  image?: string
}

const { title, image } = Astro.props
---

<a href="" class="text-white rounded-md bg-black-secondary p-3">
  <div class="flex items-center justify-center">
    <img src={`/images/${image}.png`} alt="" class="w-5" />
    <h3 class="ml-2 text-lg">{title}</h3>
  </div>
</a>
