---
type Props = {
  title?: string,
  image?: string
}

const { title, image } = Astro.props
---

<a href="" class="text-white bg-black-secondary p-3 rounded-md">
  <div class="flex items-center justify-center">
    <img src={`/images/${image}.png`} alt="" class="w-5"/>
    <h3 class="text-lg ml-2">{title}</h3>
  </div>
</a>
